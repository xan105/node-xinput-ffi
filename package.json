{
  "name": "xinput-ffi",
  "version": "2.1.0",
  "description": "XInput wrapper via ffi-napi. Access native xinput functions as well as some helpers based around them.",
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./promises": "./lib/promises.js"
  },
  "types": "./types/index.d.ts",
  "os": [
    "win32"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "npx eslint --ignore-path .gitignore \"./**/*.{js,mjs}\"",
    "postinstall": "patch-package && npm run-script rebuild",
    "rebuild": "cd .\\node_modules\\ffi-napi && node-gyp rebuild"
  },
  "keywords": [
    "xinput",
    "rumble",
    "gamepad",
    "ffi",
    "napi",
    "windows",
    "vid",
    "pid"
  ],
  "author": {
    "name": "Anthony Beaumont",
    "email": "dev.xan105@outlook.be",
    "url": "https://xan105.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xan105/node-xinput-ffi.git"
  },
  "bugs": {
    "url": "https://github.com/xan105/node-xinput-ffi/issues"
  },
  "homepage": "https://github.com/xan105/node-xinput-ffi#readme",
  "dependencies": {
    "@xan105/error": "^1.2.0",
    "@xan105/is": "^2.4.0",
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1"
  },
  "devDependencies": {
    "eslint": "^8.10.0",
    "patch-package": "^6.4.7"
  }
}

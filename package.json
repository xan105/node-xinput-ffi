{
  "name": "xinput-ffi",
  "version": "3.0.0",
  "description": "XInput FFI wrapper: access native XInput functions as well as some helpers based around them.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./lib/index.js"
    },
    "./promises": {
      "types": "./types/promises.d.ts",
      "default": "./lib/promises.js"
    },
    "./constants": {
      "types": "./types/data/Controller.d.ts",
      "default": "./data/Controller.js"
    }
  },
  "types": "./types/index.d.ts",
  "os": [
    "win32"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "lint": "eslint \"./lib/**/*.{js,mjs}\" \"./types/**/*.d.ts\"",
    "check": "tsc --noemit --checkjs",
    "declare": "tsc --declaration --emitDeclarationOnly --outDir \"./types\""
  },
  "keywords": [
    "xinput",
    "rumble",
    "gamepad",
    "ffi",
    "napi",
    "windows",
    "vid",
    "pid"
  ],
  "author": {
    "name": "Anthony Beaumont",
    "email": "dev.xan105@outlook.be",
    "url": "https://xan105.com/"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xan105/node-xinput-ffi.git"
  },
  "bugs": {
    "url": "https://github.com/xan105/node-xinput-ffi/issues"
  },
  "homepage": "https://github.com/xan105/node-xinput-ffi#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/xan105"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/xan105"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/xan105"
    }
  ],
  "dependencies": {
    "@xan105/error": "^1.4.3",
    "@xan105/is": "^2.7.0",
    "koffi": "^2.1.5"
  },
  "devDependencies": {
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  }
}
